<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfragment3">


    <TextView
        android:id="@+id/map_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:layout_marginBottom="5sp"
        android:elevation="2sp"

        android:fontFamily="@font/antic_slab"
        android:gravity="center"
        android:text="The new and updated\n
version of AUGN map\n
so that you can easily\n
find your stuff."
        android:textAlignment="center"
        android:textColor="@color/black"

        android:textSize="28sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/map_animation"
        app:layout_constraintVertical_bias="0.876" />

    <Button
        android:id="@+id/map_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2sp"
        android:fontFamily="@font/antic_slab"
        android:textStyle="italic|bold"
        android:gravity="center"
        android:text=" Start "

        android:shadowRadius="@integer/material_motion_duration_long_2"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="5dp"
        android:layout_margin="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/map_desc"
        app:layout_constraintVertical_bias="0.92" />

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.500"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.379"
        app:lottie_rawRes="@raw/map_animation"
        app:lottie_loop="true"
        app:lottie_imageAssetsFolder="images"
        app:lottie_autoPlay="true"
        android:id="@+id/map_animation"
        android:elevation="2sp"/>


    <ImageView
        android:layout_width="62sp"
        android:layout_height="28sp"
        android:src="@drawable/tab3c"
        android:id="@+id/tab3"
        android:layout_margin="5sp"
        android:drawSelectorOnTop="true"
        android:clickable="true"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/map_desc"
        app:layout_constraintVertical_bias="0.93"
        android:focusable="true" />


</androidx.constraintlayout.widget.ConstraintLayout>